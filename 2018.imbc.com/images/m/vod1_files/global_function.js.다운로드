	// 로그인 
	function iMbc_login () 
	{
				
		if (escape(getCookie("IMBCMAIN")) == "") 
		{
			SetUrl();
			window.location.href="http://member.imbc.com/Login/Login.aspx";
		}
		else 
		{
			window.location.reload();
		}
	}
	
