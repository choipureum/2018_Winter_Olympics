	function iMbc_Dtvlogin () 
	{
		if (escape(getCookie("IMBCMAIN")) == "") 
		{
			document.domain = "imbc.com";
			window.open("http://dtvsys.imbc.com/agree.asp", "dtvagree", "resizable=no,scrollbars=no,width=405,height=335");
		}
		else 
		{
			window.location.reload();
		}
	}

